{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "baseUrl": "./",
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "paths": {
      "@classes/*": ["./src/classes/*"],
      "@events/*": ["./src/events/*"],
      "@interfaces/*": ["./src/interfaces/*"],      
    },   
  },
  "exclude": [
    "scripts",
    "sdk",
    "node_modules",
    "dist",
    "test",
    "hardhat.config.ts",
    "typechain-types",  
  ],
}
